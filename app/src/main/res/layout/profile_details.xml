<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Details"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        style="@style/Base.TextAppearance.AppCompat.Title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Username"
            android:id="@+id/tv_PD_username" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/et_username" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:id="@+id/tv_PD_password" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/et_password" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="E-mail"
            android:id="@+id/tv_email" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/et_email" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="First Name"
            android:id="@+id/tv_first_name" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/et_first_name" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Last Name"
            android:id="@+id/tv_last_name" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/et_last_name" />


    </LinearLayout>



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:text="Sports you do"


    />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="Bicycle"
            android:id="@+id/cb_bicycle"
            android:layout_gravity="left" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Squash"
            android:id="@+id/cb_squash"
            android:layout_gravity="right" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:text="Swimming"
        android:id="@+id/cb_swimming"/>

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jogging"
        android:id="@+id/cb_jogging"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="Body Building"
            android:id="@+id/cb_body_building"/>

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Zumba"
            android:id="@+id/cb_zumba"/>
    </LinearLayout>








    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Upload Profile picture"
        android:id="@+id/bt_upload_picture"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginBottom="8dp"
        android:id="@+id/bt_submit"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center_horizontal" />

</LinearLayout>